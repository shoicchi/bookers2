<header>
    <%= link_to "Home", root_path %>
    <%= link_to "Users", users_path %>
    <%= link_to "Books", books_path %>
    <%= link_to "Log out", destroy_user_session_path, method: :delete %>
</header>

<h1>User info</h1>

<%= form_for(@user) do |f| %>
    <div class="">
        <label class="" >Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"user_name", placeholder:"名前"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>

    <div class="">
    	<div class="">
        	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: ""%>
    	</div>
    	<label class="c" >Image</label>
    		<%= f.attachment_field :profile_image  %>
	</div>

	<div class="">
        <label class="" >Introduction</label>
    	<%= f.text_field :introduction, autofocus: true, class:"form-control", id:"user_introduction"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>



    <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>
