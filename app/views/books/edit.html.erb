<header>
	<%= link_to "Home", root_path %>
	<%= link_to "Users", users_path %>
	<%= link_to "Books", books_path %>
	<%= link_to "Log out", destroy_user_session_path, method: :delete %>
</header>

<%= flash[:notice] %>

<h1>Editing Book</h1>


<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
